.search-box input{
  background-color: #eeeeee;
  border-radius: 15rpx;
  padding: 20rpx;
  margin: 20rpx;
}

.pd20{
  padding: 20rpx;
}

.hot-search{
  padding: 30rpx 0rpx;
  text-align: center;
}

.hot-search view{
  background-color: #1890ff;
  color: white;
  font-size: 30rpx;
  padding: 10rpx 30rpx;
  border-radius: 40rpx;
  display: inline-block;
  margin: 20rpx;
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 200rpx;
  padding: 30rpx;
  position: relative;
}

.list-item::after {
  content: '';
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  background-color: #eee;
  height: 1px;
}

.list-item .item-content {
  width: calc(100% - 180rpx);
  height: 100%;
  position: relative;
}

.list-item .item-desc {
  margin: 20rpx 0rpx;
  padding-right: 20rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.list-item .item-icon {
  width: 150rpx;
  height: 200rpx;
}

.list-item .item-footer{
  position: absolute;
  bottom: 0;
}