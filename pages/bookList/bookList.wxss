page {
  background-color: #f3f3f3;
}

.m-container {
  margin-top: 20rpx;
  background-color: white;
}

.m-container:last-child {
  margin-bottom: 30rpx;
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 200rpx;
  padding: 30rpx;
  position: relative;
}

.list-item::after {
  content: '';
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  background-color: #eee;
  height: 1px;
}

.list-item .item-content {
  width: calc(100% - 180rpx);
  height: 100%;
  position: relative;
}

.list-item .item-desc {
  margin: 20rpx 0rpx;
  padding-right: 20rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.list-item .item-icon {
  width: 150rpx;
  height: 200rpx;
}

.list-item .item-footer{
  position: absolute;
  bottom: 0;
}
