page {
  background-color: #fff;
}

.head {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding: 40rpx 0rpx;
}

.head image {
  width: 300rpx;
  height: 380rpx;
}

.pd30 {
  padding: 30rpx 0rpx;
}

.divider {
  position: relative;
}

.divider::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 1px;
  background-color: #eee;
}

.m-container {
  padding: 50rpx;
}

.title {
  padding-bottom: 25rpx;
}

.pdb10 {
  padding-bottom: 10rpx;
}

.pdt20 {
  padding-top: 20rpx;
}

.evaluate-content {
  padding: 20rpx 0rpx;
  position: relative;
}

.evaluate-content:not(:last-child)::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1px;
  background-color: #eee;
}

.bottom-layout {
  border-top: 1rpx solid #eee;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 10rpx;
}

.bottom-layout .btn {
  border: 1rpx solid #1890ff;
  border-radius: 30rpx;
  padding: 15rpx 50rpx;
  line-height: 35rpx;
  font-weight: bold;
  font-size: 32rpx !important;
}

.btn-hollow {
  background-color: #fff;
  color: #1890ff;
  display: inline-block !important;
  margin: 0 !important;
}

.btn-hollow:active, .mini-btn:active {
  border-color: #65a0d8;
  color: #65a0d8;
}

.btn-solid {
  color: #fff;
  background-color: #1890ff;
}

.btn-solid:active {
  background-color: #65a0d8;
}

.btn-hollow-disable, .mini-btn-disable {
  border-color: #888 !important;
  color: #888 !important;
}

.mini-btn, .mini-btn-disable {
  border: 1rpx solid #1890ff;
  color: #1890ff;
  border-radius: 30rpx;
  padding: 5rpx 20rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
}
