page {
  background-color: #f3f3f3;
}

.tab-content {
  margin-top: 130rpx;
  height: calc(100vh - 130rpx);
}

.card {
  background-color: #fff;
  padding: 25rpx;
  margin-bottom: 30rpx;
}

.card-title {
  position: relative;
  padding-bottom: 20rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 35rpx;
}

.card-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1px;
  background-color: #eee;
}

.card-content {
  padding: 20rpx 0rpx;
}

.card-footer {
  position: relative;
  padding-top: 20rpx;
  /* display: flex; *//* align-items: center; *//* justify-content: right; */
  text-align: right;
}

.card-footer::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background-color: #eee;
}

.footer-btn {
  font-size: 30rpx;
  border: 1px solid #1890ff;
  color: #1890ff;
  display: inline-block;
  padding: 8rpx 30rpx;
  border-radius: 10rpx;
}

.footer-btn:active {
  border-color: #75b8f7;
  color: #75b8f7;
}

.block {
  display: flex;
  align-items: center;
  height: 100rpx;
}

.block image {
  width: 100rpx;
  height: 100rpx;
}

.block-content {
  width: 100%;
  height: 100rpx;
  position: relative;
  margin-left: 20rpx;
}

.abs-bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
}

.bottom-layout {
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}


